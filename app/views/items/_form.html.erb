<%= form_for [current_user, item] do |f| %>
  <% if item.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(item.errors.count, "error") %>.</h4>
      <ul>
        <% item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <h4><%= f.label :name, "Add a New To-Do!" %></h4>
    <%= f.text_field :name, class: 'form-control item', placeholder: "Enter your item here" %>
    <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>